@model IEnumerable<DBTuntiLeimaus.ViewModels.LeimausViewModel>

@{
    ViewBag.Title = "TuntiRaporttiOpettaja";
    Layout = "~/Views/Shared/_OpettajaLayoutPage1.cshtml";
}

<body style="background-color:black" class="abcdimage">

    <link href="~/Content/Leimaus.css" rel="stylesheet" />
    <link href="~/Content/LeimausPager.css" rel="stylesheet" />
    <link href="~/Content/LeimausTable.css" rel="stylesheet" />
    <script src="~/Scripts/LeimausSearch.js"></script>
    <div class="title">
        <h1 style="color:white;" align="center">Tuntiraportti</h1>
        <p align="center">Tarkastele oppilaiden tunteja</p>

        <form class="example search">
            <input type="text" id="myInput2" onkeyup="OpettajaFunction()" placeholder="Etsi oppilaan nimellä.." name="search2">
            <button type="submit"><i class="fa fa-search"></i></button>
        </form>
        <button class="btn btn-secondary">
            @Html.ActionLink("Luo uusi", "Create", null, new { @class = "secondary" })
        </button>

        <script src="~/Scripts/LeimausPager.js"></script>
        <table class="table table leimaus_table table-responsive-sm" id="tabledata">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Sisään)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ulos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nimi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Luokkahuone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="small">
                        @Html.ActionLink(" ", "Edit", null, new { id = item.Id }, new { @class = "fas fa-pencil-alt secondary-span" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sisään)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ulos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nimi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Luokkahuone)
                    </td>
                    <td class="small">
                        @Html.ActionLink(" ", "Delete", null, new { id = item.Id }, new { @class = "far fa-trash-alt secondary-span" })
                    </td>
                </tr>
            }


        </table>
        <div id="pageNavPosition"></div>
    </div>
</body>